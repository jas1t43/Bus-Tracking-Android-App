<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.buslocatoruser.BusInfo"
    android:id="@+id/bus_info_drawer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:background="#123456">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="ROUTE 1"
                android:onClick="showroute1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute2"
                android:text="ROUTE 2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute3"
                android:text="ROUTE 3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute4"
                android:text="ROUTE 4"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute5"
                android:text="ROUTE 5"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute6"
                android:text="ROUTE 6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute7"
                android:text="ROUTE 7"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:onClick="showroute8"
                android:text="ROUTE 8"/>
            </LinearLayout>
        </ScrollView>




    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navigationview"
        android:layout_gravity="start"
        app:menu="@menu/drawer"
        app:headerLayout="@layout/navigation_drawer_header"
        >
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
